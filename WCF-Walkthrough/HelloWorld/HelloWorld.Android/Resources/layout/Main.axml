    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0px"
        android:layout_weight="1">
        <Button
            android:id="@+id/getHelloWorldDataButton"
            android:layout_width="fill_parent"
